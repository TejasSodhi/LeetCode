class Solution {
    public int[] sortArrayByParity(int[] nums) {
        int end = nums.length;
        int start = 0;
        int[] res = new int[end];
        if(nums.length == 0)
            return null;
        for(int i=0 ; i<nums.length ; i++){
            if(nums[i]%2==0){
                res[start] = nums[i];
                start ++;
            }   
            else{
                res[end-1] = nums[i];
                end--;
            }    
        }
        return res;
     }
}
