class Solution {
    public int[] runningSum(int[] nums) {
        
        int newnums[] = new int[nums.length];
        int sum = nums[0];
        newnums[0] = nums[0];
        for(int i=0 ; i<nums.length; i++){
            
            if(i==0)
                newnums[i] = nums[i];
            else{
                sum = sum + nums[i];
                newnums[i] = sum;
            }
            
        }
            
        return(newnums);
    }
}
