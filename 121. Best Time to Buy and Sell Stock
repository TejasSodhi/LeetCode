class Solution {
    public int maxProfit(int[] prices) {
        int left = 0;
        int right = 0;
        int max = 0;
        
        int n = prices.length;
        
		// handle basic edge cases when size is 0,1,2
        if(n == 1 || n == 0) {
            return 0;
        }
        
        if(n == 2) {
            if(prices[0] > prices[1]) {
                return 0;
            } else {
                return prices[1] - prices[0];
            }
        }
        
        while(right < n) {
            if(prices[left] > prices[right]) {
                left = right;
            }
            max = Math.max(max, prices[right] - prices[left]);
            
            right++;
        }
        
        return max;
    }
}
